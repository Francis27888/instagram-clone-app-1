<%= form_with(model: @post, local: true,html: {multipart: true},url: choose_new_or_edit) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field form-group row">
    <%= f.label:content, class: 'col-sm-2 control-label', style:'text-align:right;margin-top:7px' %>
    <div class="col-sm-10">
      <%= f.text_area:content, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group row">
    <%= f.label :image , class: 'col-sm-2 control-label', style:'text-align:right;margin-top:7px'%>
    <%= f.file_field :image, id: :post_image %>
    <%= f.hidden_field :image_cache %>
  </div>
 
     <%= f.submit 'Save', class: 'btn btn-primary btn-save', style:'width:200px;margin-left:200px;float:left' %>
<% end %>
