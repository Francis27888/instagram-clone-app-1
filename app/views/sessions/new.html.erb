<div class="row">
    <div class="col col-3"></div>
    <div class="col col-3 home_image_div">
        <%=image_tag("home image.jpg", class: "img-fluid home_image")%>
    </div>
    <div class="col col-3">
        
        <div class="login_form">
            <h1 style="text-align:center">Instagram</h1>
    <%= form_with(scope: :session,url: sessions_path ) do |f|%>
        
    <%= f.text_field:email, class: 'form-control', placeholder:'Email' %>
    <%= f.password_field:password, class: 'form-control', placeholder:'Password'%>
       <%= f.submit 'Log in', class: 'btn btn-primary btn-submit', style:'width:100%' %>
  </div>
<% end %>
    
    <br>
    <div class="login_page">
            <label>Don't Have an account? </label>
            <%=link_to 'Sign up',users_path %>
        </div>
        </div>
        
    </div>
    
    <div class="col col-3">
        
    </div>
</div>