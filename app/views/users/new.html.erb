<div class="row">
    <div class="col col-3"></div>
    <div class="col col-3 home_image_div">
        <%=image_tag("home image.jpg", class: "img-fluid home_image")%>
    </div>
    <div class="col col-3">
        
        <div class="sign_up_form">
            <h1 style="text-align:center">Instagram</h1>
            <h6 style="opacity:0.5;text-align:center">Sign up to see photos and videos from your friends.</h6>
            <button class="btn btn-primary" style="width:100%;text-align:center;padding-top: 0px;height:30px">Log in with facebook</button>
            <div class="row" style="margin-top:8px;margin-bottom:20px">
            <div class="col col-5">
                <hr />
            </div>
            
                <label class="col col-2" style="margin-top:5px">OR</label>
      
            <div class="col col-5" >
                <hr/>
            </div>
            </div>
<%= form_with(model: @user,local: true ) do |f|%>
    <% if @user.errors.any? %>
        <div class="error_explanation">
            <h2><%= @user.errors.count%> errors occured!!</h2>
            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end%>
    <%= f.text_field:email, class: 'form-control', placeholder:'Email' %>
    <%= f.text_field:names, class: 'form-control', placeholder:'Full Name'%>
    <%= f.text_field:username, class: 'form-control', placeholder:'Username'%>
    <%= f.text_field:password, class: 'form-control', placeholder:'Password'%>
       <%= f.submit 'Sign up', class: 'btn btn-primary btn-submit', style:'width:100%' %>
  </div>
<% end %>
    
    <br>
        </div>
    </div>
    
    <div class="col col-3">
        
    </div>
</div>